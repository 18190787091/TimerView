<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.fashare.timerview.MainActivity"
    android:orientation="vertical"
    android:gravity="center">

    <com.fashare.timer_view.DigitalTimerView
        android:id="@+id/dtv_simple"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <com.fashare.timer_view.DigitalTimerView
        android:id="@+id/dtv_complex"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"/>

    <com.fashare.timer_view.DigitalTimerView
        android:id="@+id/dtv_fire"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"/>

    <com.fashare.timerview.customize.GoogleTimerView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"/>

    <com.fashare.timerview.customize.MechanicalTimerView
        android:layout_width="260dp"
        android:layout_height="260dp"
        android:layout_marginTop="10dp"/>

</LinearLayout>
